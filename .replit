modules = ["nodejs-20", "python-3.11"]
[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales", "gumbo", "harfbuzz", "imagemagickBig", "jbig2dec", "libjpeg_turbo", "mupdf", "openjpeg", "p7zip", "swig", "unzip", "xcbuild"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PDF Editor Pro"

[[workflows.workflow]]
name = "PDF Editor Pro"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && pnpm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd frontend && npm run start -- -p 5000 -H 0.0.0.0"]
build = ["bash", "-c", "cd frontend && npm install && npm run build"]
